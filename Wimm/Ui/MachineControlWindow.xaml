<Metro:MetroWindow x:Class="Wimm.Ui.MachineControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:t="clr-namespace:Simple.Wpf.Terminal;assembly=Simple.Wpf.Terminal"
        xmlns:local="clr-namespace:Wimm.Ui"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:ViewModels="clr-namespace:Wimm.Ui.ViewModel"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance ViewModels:MachineControlViewModel}"
        Title="{Binding MachineName}" Height="650" Width="900">
    <Grid>
        <DockPanel LastChildFill="True" Background="{StaticResource MahApps.Brushes.Gray9}">
            <StatusBar DockPanel.Dock="Bottom">
                <StatusBarItem>
                    <BulletDecorator>
                        <BulletDecorator.Bullet>
                            <TextBlock Text="{Binding GeneralProgressLabel}"/>
                        </BulletDecorator.Bullet>
                        <Metro:MetroProgressBar Width="250" Minimum="0" Maximum="1" Value="{Binding GeneralProgress}"/>
                    </BulletDecorator>
                </StatusBarItem>
                <StatusBarItem HorizontalAlignment="Right">
                    <TextBlock>
                        Connection : <Run Text="{Binding ConnectionStatus}"/>
                    </TextBlock>
                </StatusBarItem>
            </StatusBar>
            <Border DockPanel.Dock="Right" Margin="5 0 0 0" Name="InformationField" Width="300" Background="{StaticResource MahApps.Brushes.Window.Background}">
                <DockPanel LastChildFill="True">
                    <ListBox Margin="{StaticResource Wimm.Margin.Middle}"></ListBox>
                </DockPanel>
            </Border>
            <ContentControl DockPanel.Dock="Bottom" Height="150" Margin="10 0 10 10">
                <t:Terminal
                    Name="InteractionTerminal"
                    ItemsSource="{Binding TerminalLines, Mode=OneWay}"
                    IsReadOnly="False"
                    BorderThickness="1"
                    VerticalScrollBarVisibility="Visible"
                    >
                    <b:Interaction.Triggers>
                        <b:EventTrigger EventName="LineEntered">
                            <b:InvokeCommandAction 
                            Command="{Binding TerminalExecuteCommand}"
                            CommandParameter="{Binding Path=Line, Mode=OneWay, ElementName=InteractionTerminal}" />
                        </b:EventTrigger>
                    </b:Interaction.Triggers>
                </t:Terminal>
            </ContentControl>
            <Border Name="ScreenField" Margin="{StaticResource Wimm.Margin.Middle}" Background="{StaticResource MahApps.Brushes.Gray1}">
                <Image Name="Screen"/>
            </Border>
        </DockPanel>
    </Grid>
</Metro:MetroWindow>